---
import { PROJECT_CONFIG } from '../config/project.ts';

export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  showText?: boolean;
  className?: string;
}

const { size = 'md', showText = false, className = '' } = Astro.props;
const logoPath = PROJECT_CONFIG.baseUrl.endsWith('/') ? `${PROJECT_CONFIG.baseUrl}bataillon-logo.png` : `${PROJECT_CONFIG.baseUrl}/bataillon-logo.png`;

const sizeClasses = {
  sm: 'w-8 h-8',
  md: 'w-12 h-12', 
  lg: 'w-16 h-16',
  xl: 'w-24 h-24'
};

const textSizes = {
  sm: 'text-sm',
  md: 'text-base',
  lg: 'text-lg', 
  xl: 'text-2xl'
};
---

<div class={`flex items-center gap-3 ${className}`}>
  <div class={sizeClasses[size]}>
    <img 
      src={logoPath} 
      alt="Bataillon Logo" 
      class="w-full h-full object-contain rounded-full"
    />
  </div>
  {showText && (
    <span class={`font-bold text-heading ${textSizes[size]} tracking-wider`}>
      BATAILLON
    </span>
  )}
</div>
