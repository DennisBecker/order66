---
export interface Props {
  message?: string;
}

const { message = "Loading raid data..." } = Astro.props;
---

<div class="flex flex-col items-center justify-center py-12">
  <div class="relative mb-4">
    <!-- Spinning outer ring -->
    <div class="animate-spin rounded-full h-16 w-16 border-4 border-cyan-500/20 border-t-cyan-400"></div>
    
    <!-- Logo in center -->
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="w-8 h-8 rounded-full bg-gradient-to-br from-cyan-400 to-blue-600 flex items-center justify-center">
        <span class="text-white text-xs font-bold">BA</span>
      </div>
    </div>
  </div>
  
  <p class="text-cyan-400 text-lg font-medium">{message}</p>
</div>
