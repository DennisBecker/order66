---
export interface Props {
  loading?: boolean;
  error?: string;
}

const { loading = false, error } = Astro.props;
---

<div class="min-h-screen flex items-center justify-center" class:list={[
  { "hidden": !loading && !error }
]}>
  {loading && (
    <div class="text-center text-xl text-gold my-12">
      <div class="animate-spin inline-block w-8 h-8 border-4 border-gold border-r-transparent rounded-full mr-3"></div>
      Loading raid data...
    </div>
  )}
  
  {error && (
    <div class="bg-red-500/20 border border-red-500 text-red-200 p-4 rounded max-w-lg mx-auto">
      <h3 class="text-lg font-bold mb-2">⚠️ Error</h3>
      <p>{error}</p>
    </div>
  )}
</div>
