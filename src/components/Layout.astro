---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
  </head>
  
  <body class="p-5">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col items-center mb-6">
        <Logo size="xl" className="mb-4" />
        <h1 class="text-center text-gold text-4xl">ðŸ›¸ Order 66 Raid Analysis</h1>
        <p class="text-center text-gray-400 text-sm mt-2">Star Wars: Galaxy of Heroes Guild Analytics</p>
      </div>
      
      <Navigation />
      
      <div id="error" class="hidden my-8">
        <!-- Error content will be dynamically inserted here -->
      </div>

      <div id="content">
        <slot />
      </div>

      <div class="text-center mt-12 py-6 border-t border-gray-700">
        <div class="flex justify-center mb-3">
          <Logo size="sm" />
        </div>
        <p class="text-gray-400 text-sm">Order 66 Raid Analysis for Star Wars: Galaxy of Heroes</p>
        <p class="text-gray-500 text-xs mt-1">Built with Astro.js â€¢ Automatically updated based on CSV files from Wookiebot</p>
      </div>
    </div>
  </body>
</html>
