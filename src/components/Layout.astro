---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
  </head>
  
  <body class="p-2 sm:p-5">
    <div class="max-w-7xl mx-auto mobile-content">
      <div class="flex flex-col items-center mb-4 sm:mb-6">
        <div class="flex items-center gap-3 mb-2 sm:mb-4">
          <Logo size="lg" className="mobile-logo" />
          <h1 class="text-center text-heading text-2xl sm:text-4xl mobile-title">Order 66 Raid Analysis</h1>
        </div>
        <p class="text-center text-gray-400 text-xs sm:text-sm mt-1 sm:mt-2">Star Wars: Galaxy of Heroes Guild Analytics</p>
      </div>
      
      <Navigation />
      
      <div id="error" class="hidden my-4 sm:my-8">
        <!-- Error content will be dynamically inserted here -->
      </div>

      <div id="content">
        <slot />
      </div>

      <div class="text-center mt-8 sm:mt-12 py-4 sm:py-6 border-t border-gray-700">
        <div class="flex justify-center mb-2 sm:mb-3">
          <Logo size="sm" />
        </div>
        <p class="text-gray-400 text-xs sm:text-sm">Order 66 Raid Analysis for Star Wars: Galaxy of Heroes</p>
        <p class="text-gray-500 text-xs mt-1">Built with Astro.js â€¢ Automatically updated based on CSV files from Wookiebot</p>
      </div>
    </div>
  </body>
</html>
