---
// This component renders the filtering controls for the player table
---

<div class="mb-8 flex gap-5 flex-wrap items-center">
  <label class="flex items-center gap-2">
    <span class="text-gold font-bold">Sort by:</span>
    <select id="sortBy" class="form-control">
      <option value="participation">Participation %</option>
      <option value="name">Name</option>
      <option value="totalScore">Total Score</option>
      <option value="avgScore">Average Score</option>
      <option value="lastActivity">Last Activity</option>
    </select>
  </label>
  
  <label class="flex items-center gap-2">
    <span class="text-gold font-bold">Minimum Participation:</span>
    <input type="number" id="minParticipation" value="0" min="0" max="100" placeholder="0" class="form-control w-20">
    <span class="text-gray-300">%</span>
  </label>
  
  <label class="flex items-center gap-2">
    <span class="text-gold font-bold">Filter by Name:</span>
    <input type="text" id="nameFilter" placeholder="Enter player name..." class="form-control">
  </label>
  
  <button onclick="applyFilters()" class="btn-primary">Apply Filters</button>
  <button onclick="exportData()" class="btn-primary">Export Data</button>
</div>
